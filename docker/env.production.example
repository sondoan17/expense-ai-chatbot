# ================================
# Production Environment Variables
# ================================
# Copy this file to .env and fill in the values

# --------------------------------
# Database (Your external server)
# --------------------------------
DATABASE_URL=postgresql://USER:PASSWORD@YOUR_DB_HOST:5432/expense?schema=public

# --------------------------------
# API Configuration
# --------------------------------
NODE_ENV=production
JWT_SECRET=your_super_secret_jwt_key_min_32_chars_long
JWT_EXPIRES_IN=7d
PORT=4000
APP_TIMEZONE=Asia/Ho_Chi_Minh

# AI Service
HYPERBOLIC_API_URL=https://api.hyperbolic.xyz/v1/chat/completions
HYPERBOLIC_API_KEY=your_hyperbolic_api_key
HYPERBOLIC_MODEL=Qwen/Qwen3-Next-80B-A3B-Thinking

# --------------------------------
# Frontend Configuration
# --------------------------------
VITE_API_BASE_URL=https://mimichatbot.fun/api

# CORS - allowed origins (comma separated)
WEB_ORIGIN=https://mimichatbot.fun,https://www.mimichatbot.fun

# --------------------------------
# Domain Configuration
# --------------------------------
DOMAIN=mimichatbot.fun
CERTBOT_EMAIL=your_email@example.com
